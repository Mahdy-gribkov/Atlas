{
  "name": "atlas-ai-travel-agent",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:api": "jest --testPathPattern=__tests__/api",
    "test:components": "jest --testPathPattern=__tests__/components",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:ci && npm run test:e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "firebase:emulators:start": "firebase emulators:start",
    "firebase:emulators:export": "firebase emulators:export ./firebase-export",
    "firebase:emulators:import": "firebase emulators:start --import ./firebase-export",
    "prepare": "husky install",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "metrics": "curl -f http://localhost:3000/api/metrics || exit 1",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:scan": "snyk test",
    "security:monitor": "snyk monitor",
    "deps:update": "npm update",
    "deps:check": "npm outdated",
    "deps:audit": "npm audit --audit-level=moderate",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check:strict": "tsc --noEmit --strict",
    "build:analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "start:production": "NODE_ENV=production npm start"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "@hookform/resolvers": "^3.3.2",
    "@langchain/google-genai": "^0.0.8",
