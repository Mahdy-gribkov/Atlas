# Free API Keys - Get these for free from the respective services
# OpenWeather API - Free tier: 1000 calls/day
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Fixer.io API - Free tier: 100 calls/month
FIXER_API_KEY=your_fixer_api_key_here

# AviationStack API - Free tier: 100 calls/month
AVIATIONSTACK_API_KEY=your_aviationstack_api_key_here

# Amadeus API - Free tier: 2000 calls/month
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# Local LLM (Ollama) - Completely free and recommended
USE_LOCAL_LLM=true
OLLAMA_MODEL=llama2

# Optional: OpenAI API - Only if you want to use OpenAI instead of local LLM
# You get $5 free credit when you sign up, but local LLM is completely free
OPENAI_API_KEY=your_openai_api_key_here

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
DATABASE_PATH=./data/travel_agent.db
CACHE_TTL=3600
