# Production Environment Configuration for Travel AI Agent
# Copy this file to .env and customize for your production environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (comma-separated list of valid API keys)
VALID_API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3

# Encryption Key for Database (32-byte base64 encoded key)
DATABASE_ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database Configuration
DATABASE_URL=sqlite:///data/travel_agent.db
DATABASE_ENCRYPTION_ENABLED=true
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24
DATABASE_MAX_BACKUPS=30

# =============================================================================
# CACHE SETTINGS
# =============================================================================

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_PERSISTENT=true
CACHE_PERSISTENT_PATH=data/cache

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Performance Monitoring
PERFORMANCE_MONITORING=true
PERFORMANCE_METRICS_RETENTION_DAYS=30
PERFORMANCE_ALERT_THRESHOLD_MS=5000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# =============================================================================
# EXTERNAL API SETTINGS
# =============================================================================

# LLM Service Configuration
LLM_SERVICE_URL=https://api.llm7.io/v1
LLM_SERVICE_API_KEY=your-llm7-api-key
LLM_SERVICE_MODEL=llama-3.1-8b
LLM_SERVICE_TIMEOUT=30
LLM_SERVICE_MAX_RETRIES=3

# Weather API Configuration
WEATHER_API_ENABLED=true
WEATHER_API_TIMEOUT=10
WEATHER_API_MAX_RETRIES=3

# Maps API Configuration
MAPS_API_ENABLED=true
MAPS_API_TIMEOUT=10
MAPS_API_MAX_RETRIES=3

# =============================================================================
# MONITORING SETTINGS
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Logging Configuration
LOG_FILE_ENABLED=true
LOG_FILE_PATH=data/travel_agent.log
LOG_FILE_MAX_SIZE_MB=100
LOG_FILE_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# BACKUP SETTINGS
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIRECTORY=backups
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================

# Frontend Configuration
FRONTEND_BUILD_PATH=frontend/build
FRONTEND_STATIC_PATH=frontend/build/static
FRONTEND_INDEX_PATH=frontend/build/index.html

# =============================================================================
# DOCKER SETTINGS
# =============================================================================

# Docker Configuration
DOCKER_IMAGE_NAME=travel-agent
DOCKER_IMAGE_TAG=latest
DOCKER_REGISTRY=your-registry.com
DOCKER_NETWORK=travel-agent-network

# =============================================================================
# SSL/TLS SETTINGS
# =============================================================================

# SSL Configuration (for production with reverse proxy)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature Toggles
FEATURE_VOICE_INPUT=true
FEATURE_MAP_INTEGRATION=true
FEATURE_REAL_TIME_DATA=true
FEATURE_ADVANCED_CACHING=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_HEALTH_CHECKS=true
FEATURE_AUTOMATIC_BACKUPS=true

# =============================================================================
# DEVELOPMENT SETTINGS (DISABLE IN PRODUCTION)
# =============================================================================

# Development Features (should be false in production)
DEV_MODE=false
DEV_HOT_RELOAD=false
DEV_DEBUG_TOOLBAR=false
DEV_MOCK_APIS=false

# =============================================================================
# CUSTOM SETTINGS
# =============================================================================

# Add your custom environment variables here
# CUSTOM_SETTING_1=value1
# CUSTOM_SETTING_2=value2