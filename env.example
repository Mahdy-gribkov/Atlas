# Travel AI Agent Environment Configuration
# Copy this file to .env and update the values as needed

# LLM Configuration - Cloud LLM Only (No API keys required)
USE_LOCAL_LLM=false
CLOUD_LLM_URL=https://api-inference.huggingface.co/models/microsoft/DialoGPT-medium
CLOUD_LLM_MODEL=microsoft/DialoGPT-medium

# LLM Performance Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512
LLM_TOP_P=0.9
LLM_TIMEOUT=30

# Security Settings (Auto-generated if not provided)
# ENCRYPTION_KEY=your-encryption-key-here
# SECRET_KEY=your-secret-key-here

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
DATABASE_PATH=./data/travel_agent.db
CACHE_TTL=3600

# Environment
ENVIRONMENT=development

# API Rate Limits (Free tier limits)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000

# Database Settings
DATABASE_CLEANUP_INTERVAL=86400
DATABASE_MAX_RECORDS=10000

# Cache Settings
CACHE_MAX_SIZE=1000
CACHE_DEFAULT_TTL=3600

# Security Settings
MAX_MESSAGE_LENGTH=2000
SECURITY_MONITORING=true

# Logging Settings
LOG_FILE=./data/travel_agent.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5