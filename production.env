# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_PATH=./data/travel_agent.db
DATABASE_ENCRYPTION_KEY=your-production-encryption-key-here

# Security Configuration
SECRET_KEY=your-production-secret-key-here
CORS_ORIGINS=["https://your-domain.com"]

# LLM Configuration - Free Hugging Face LLM (No API key required)
USE_LOCAL_LLM=false
CLOUD_LLM_URL=https://api-inference.huggingface.co/models/microsoft/DialoGPT-medium
CLOUD_LLM_MODEL=microsoft/DialoGPT-medium
CLOUD_LLM_API_KEY=

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
